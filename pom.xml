        <com-puppycrawl-tools-guava.version>26.0-jre</com-puppycrawl-tools-guava.version>
        <exec-maven-plugin.version>1.6.0</exec-maven-plugin.version>
        <license-maven-plugin.version>3.0</license-maven-plugin.version>
        <maven-gpg-plugin.version>1.6</maven-gpg-plugin.version>
        <nexus-staging-maven-plugin.version>1.6.8</nexus-staging-maven-plugin.version>
        <maven-clean-plugin.version>3.1.0</maven-clean-plugin.version>
        <maven-deploy-plugin.version>2.8.2</maven-deploy-plugin.version>
        <maven-install-plugin.version>2.5.2</maven-install-plugin.version>
        <maven-site-plugin.version>3.7.1</maven-site-plugin.version>
        <maven-surefire-plugin.version>2.22.0</maven-surefire-plugin.version>
        <directory-maven-plugin.version>0.3.1</directory-maven-plugin.version>
        <versions-maven-plugin.version>2.6</versions-maven-plugin.version>

        <!-- dependencies -->
        <grpc.version>1.14.0</grpc.version>
        <slf4j.version>1.7.25</slf4j.version>
        <plexus-compiler-javac-errorprone.version>2.8.5</plexus-compiler-javac-errorprone.version>
        <error-prone-core.version>2.3.1</error-prone-core.version>
        <log4j2.version>2.11.1</log4j2.version>
        <jcommander.version>1.72</jcommander.version>
        <!-- should be in sync with protobuf grpc dependencies -->
